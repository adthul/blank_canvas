<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => current_user.user_name %></h1>
</div>

  <div class="row">

    <div class="col-md-7">
      <dl class="dl-horizontal">
        <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
        <dd><%= @user.email %></dd>
      <p></p>
        <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
        <dd><%= @user.description %></dd>
      </dl>
    </div>
    <div class="col-md-3" id="grav"><%= set_avatar(current_user) %></div>
  </div>

<br><br>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= link_to "Back", root_path, class: 'btn btn-info'  %>
    <%= link_to "Edit", edit_user_registration_path(@user), class: 'btn btn-success' %>
  </div>
</div>
