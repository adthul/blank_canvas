<%- model_class = Folder -%>
<div class="page-header">
  <h1><%= folder.folder_name %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:folder_name) %>:</strong></dt>
  <dd><%= @folder.folder_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @folder.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:link_id) %>:</strong></dt>
  <dd><%= @folder.link_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              user_folders_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_folder_path(@user,@folder), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_folder_path(@user,@folder),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
