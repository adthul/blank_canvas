<%- model_class = Folder -%>
<div class="page-header">
  <h1><%= @folder_name %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Link Title</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    <% @folders.each do |folder| %>
      <tr>
        <td><%= folder.link.title if folder.link.present? %></td>
        <td>
          <%= link_to "Show Link", link_path(folder.link), class: 'btn btn-info' %>
          <%= link_to "Edit", edit_link_path(folder.link), class: 'btn btn-success' %>
          <%= link_to "Delete", user_folder_path(current_user.id, folder.id), :data => { :confirm => 'Are you sure?' }, :method => :delete, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render 'newlinkform' %>
